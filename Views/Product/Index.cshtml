@model IEnumerable<Cloud2bPOE.Models.Product>

<h2 class="text-center" style="color: darkgreen;">Products</h2>

<p class="text-center">
    <a class="btn btn-success" asp-action="Create" style="background-color: darkgreen; border-color: darkgreen;">Add New Product</a>
</p>

<table class="table table-hover table-bordered" style="border-color: darkgreen;">
    <thead style="background-color: darkgreen; color: beige;">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: beige;">
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Stock</td>
                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Center the content and add some padding */
    h2 {
        font-weight: bold;
        margin-top: 20px;
    }

    /* Custom table styles */
    .table-hover tbody tr:hover {
        background-color: #e6f2e6; /* Light green for hover effect */
    }
</style>
