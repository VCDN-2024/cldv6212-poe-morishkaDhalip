@model IEnumerable<Cloud2bPOE.Models.Customer>

<h2 class="title">Customers</h2>

<div class="container">
    <div class="header">
        <a href="@Url.Action("Create")" class="btn btn-create">Create New Customer</a>
    </div>

    <table class="table table-custom">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Background colors */
    body {
        background-color: #f5f5dc; /* Light beige */
        color: #333; /* Darker text for readability */
    }

    .title {
        text-align: center;
        font-size: 2em;
        color: #2f4f4f; /* Dark green */
        margin-bottom: 20px;
    }

    /* Container styling */
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Header styling */
    .header {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 15px;
    }

    .btn-create {
        padding: 8px 16px;
        background-color: #2f4f4f; /* Dark green */
        color: #fff;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

        .btn-create:hover {
            background-color: #3b6d6d; /* Slightly lighter green for hover */
            color: #fff;
        }

    /* Table styling */
    .table-custom {
        width: 100%;
        border-collapse: collapse;
    }

        .table-custom thead {
            background-color: #2f4f4f; /* Dark green */
            color: #fff;
        }

        .table-custom th, .table-custom td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table-custom tbody tr:nth-child(even) {
            background-color: #f0f0e0; /* Light beige row for alternating effect */
        }

        .table-custom tbody tr:hover {
            background-color: #e0e0d0; /* Slightly darker beige for row hover */
        }

</style>

